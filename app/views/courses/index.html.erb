<h2>課程列表</h2>
<%=form_tag courses_path,method:"get" do%>
<div>課程名稱<%=text_field_tag :title%></div>
<div>授課老師<%=text_field_tag :teacher%></div>
<div>教室<%=text_field_tag :classroom%></div>
<div>上課時間<%=text_field_tag :time%></div>
<div>學分數<%=text_field_tag :credit%></div>
<div><%=submit_tag "搜尋"%></div>
<%end%>
<% @courses.each do|course|%>
<div>
<%= link_to course.title, course_path(course) %>
<%= link_to "編輯課程", edit_course_path(course) %>
<%= link_to "刪除課程", course_path(course),method:"delete" %>
</div>
<%end%>
